    <div class="content-backdrop fade"></div>
</div>

@section Scripts{
    <script src="~/js/homeIndex.js"></script>
    <script>
        var app = app || {}
        app.Urls = app.Urls || {}

        app.Urls.yearlySprintsCountUrl = "@(Url.Action("GetYearlySprintCounts", "Home"))";
        app.Urls.totalSprintCountUrl = "@(Url.Action("GetTotalSprintCount", "Home"))";
        app.Urls.totalFunctionCountUrl = "@(Url.Action("GetTotalFunctionCount", "Home"))";
        app.Urls.totalParameterCountUrl = "@(Url.Action("GetTotalParameterCount", "Home"))";
    </script>
}